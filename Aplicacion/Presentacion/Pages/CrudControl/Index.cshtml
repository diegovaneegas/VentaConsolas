@page
@model Presentacion.Pages.CrudControl.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>

body{
    background-color: #FFC107;
    }
.boton_crear{
    background-color: #2940D3;
    color: white;
    font-size: 24px;
}

.table{
    width: 110%;
}

</style>

<h1>Mandos de Consola</h1>

<p>
    <a asp-page="Create" class="boton_crear">Crear Mando</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Control[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Control[0].Serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Control[0].FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Control[0].precioCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Control[0].precioVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Control) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precioVenta)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
