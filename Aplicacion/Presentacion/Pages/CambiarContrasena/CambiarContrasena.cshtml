@page
@model Presentacion.Pages.CambiarContrasenaModel
@{
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Contraseña nueva:</label>
                <input asp-for="ConfirmarContrasenaN1" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Confirmar contraseña:</label>
                <input asp-for="ConfirmarContrasenaN2" type="password" class="form-control" />
                <span class="text-danger">@Model.MensajePassword</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>