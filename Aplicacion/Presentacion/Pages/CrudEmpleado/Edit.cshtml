@page
@model Presentacion.Pages.CrudEmpleado.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empleado.Id" />

            <div class="form-group">
                <label asp-for="Empleado.Nombre" class="control-label"></label>
                <input asp-for="Empleado.Nombre" class="form-control" />
                <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Empleado.Apellido" class="control-label"></label>
                <input asp-for="Empleado.Apellido" class="form-control" />
                <span asp-validation-for="Empleado.Apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Empleado.Cedula" class="control-label"></label>
                <input asp-for="Empleado.Cedula" class="form-control" />
                <span asp-validation-for="Empleado.Cedula" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Empleado.CodigoEmpleado" class="control-label"></label>
                <input asp-for="Empleado.CodigoEmpleado" class="form-control" />
                <span asp-validation-for="Empleado.CodigoEmpleado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Empleado.NombreRol" class="control-label"></label>
                <select asp-for="Empleado.NombreRol" class="form-control"></select>
                <span asp-validation-for="Empleado.NombreRol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Empleado.Sucursal" class="control-label"></label>
                <input asp-for="Empleado.Sucursal" class="form-control" />
                <span asp-validation-for="Empleado.Sucursal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Empleado.Password" class="control-label"></label>
                <input asp-for="Empleado.Password" class="form-control" />
                <span asp-validation-for="Empleado.Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Empleado.AccesoReportes" /> @Html.DisplayNameFor(model => model.Empleado.AccesoReportes)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
