@page
@model Presentacion.Pages.CrudConsola.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Consolas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Consolas.Nombre" class="control-label"></label>
                <input asp-for="Consolas.Nombre" class="form-control" />
                <span asp-validation-for="Consolas.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consolas.Version" class="control-label"></label>
                <input asp-for="Consolas.Version" class="form-control" />
                <span asp-validation-for="Consolas.Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consolas.Fabricante" class="control-label"></label>
                <input asp-for="Consolas.Fabricante" class="form-control" />
                <span asp-validation-for="Consolas.Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consolas.TipoAlmacenamiento" class="control-label"></label>
                <select asp-for="Consolas.TipoAlmacenamiento" class="form-control">
                    <option value="0">SDD</option>
                    <option value="1">HDD</option>
                    <option value="2">AMBOS</option>
                </select>
                <span asp-validation-for="Consolas.TipoAlmacenamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consolas.VelocidadProcesador" class="control-label"></label>
                <input asp-for="Consolas.VelocidadProcesador" class="form-control" />
                <span asp-validation-for="Consolas.VelocidadProcesador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consolas.precioVenta" class="control-label"></label>
                <input asp-for="Consolas.precioVenta" class="form-control" />
                <span asp-validation-for="Consolas.precioVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consolas.precioCompra" class="control-label"></label>
                <input asp-for="Consolas.precioCompra" class="form-control" />
                <span asp-validation-for="Consolas.precioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consolas.VideoJuego" class="control-label"></label>
                <select asp-for="Consolas.VideoJuego" class="form-control" asp-items="Model.VideoJuegosFront" >
                <option>Seleccione un Videojuego</option>
                </select>
                <span asp-validation-for="Consolas.precioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
